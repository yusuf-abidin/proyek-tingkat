<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_profil"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profil_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fotoprofil"
            tools:ignore="ContentDescription"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/text_notification"
        app:layout_constraintTop_toTopOf="@id/card_profil"
        app:layout_constraintBottom_toBottomOf="@id/card_profil"
        app:layout_constraintStart_toEndOf="@id/card_profil"/>

</androidx.constraintlayout.widget.ConstraintLayout>